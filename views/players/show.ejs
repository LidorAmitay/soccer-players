<% layout('/Layouts/boilerplates.ejs') %>
<body>
    <h1><%= player.name %> </h1>
    <ul>
        <li>Team : <%= player.team %> </li>
        <li>Age : <%= player.age %> </li>
        <li>Role : <%= player.role %> </li>
        <li>Position : <%= player.position %> </li>
        <li>Jersey Number : <%= player.jersey %> </li>
    </ul>
    <a href="/players">All Players</a>
    <a href="/players/<%= player._id %>/edit ">Edit</a>
    <form action="/players/<%= player._id %>?_method=DELETE" method="POST">
        <button>Delete</button>
    </form>
</body>